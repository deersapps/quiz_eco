<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginBottom="@dimen/_20sdp"-->
<!--        tools:ignore="MissingConstraints">-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp">
        <LinearLayout
            android:id="@+id/llLoginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_library_add_check_24"
                android:layout_centerInParent="true"
                tools:ignore="DuplicateIds">
            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/eco_add_new"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorTheme"
                android:textSize="24sp"
                android:textStyle="bold" />



            <!--Create a TextInputLayout and choose the style,
        for now we are choosing the OutlinedBox ExposedDropdownMenu   -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                android:theme="@style/Theme.MaterialComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="@color/colorWhite"
                android:importantForAutofill="no"
                android:paddingBottom="@dimen/_15sdp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite">

                <!-- Inside text input layout add
                      an auto complete text view
                        and make its input type to none-->
                <AutoCompleteTextView
                    android:id="@+id/activtyAutoCompleteView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="textImeMultiLine"
                    android:text="Select Activity"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorWhite"
                android:buttonTint="@color/colorWhite"
                android:id="@+id/addActivityCheckBox"
                android:text="@string/consent_user_add"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_background_dark"
                android:elevation="4dp"
                android:text="@string/add_photo"

                android:layout_marginBottom="@dimen/_10sdp"
                android:textAllCaps="false" />

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone"
                android:id="@+id/imageCapture">

            </ImageView>

            <Button
                android:id="@+id/btnAddActivity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_background_dark"
                android:elevation="4dp"
                android:text="@string/addit"

                android:layout_marginBottom="@dimen/_50sdp"
                android:textAllCaps="false" />
        </LinearLayout>
        </ScrollView>
<!--    </RelativeLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>
